<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">


    <LinearLayout
        android:id="@+id/layoutMaintenaceCV"
        android:visibility="gone"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_large"
        android:orientation="vertical">
        <TextView
            android:text="Choose Maintenance Service"
            android:fontFamily="@font/crimson_text_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCorrectiveMaintenance"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            card_view:cardCornerRadius="@dimen/card_corner_radius">
            <LinearLayout
                android:layout_marginTop="@dimen/margin_xlarge"
                android:layout_marginBottom="@dimen/margin_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/home_cm"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.6"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:orientation="vertical">
                    <TextView
                        android:text="Corrective Maintenance"
                        android:textSize="@dimen/txt_size_x_large"
                        android:textStyle="bold"
                        android:textColor="@color/colorLightBlack"
                        android:fontFamily="@font/crimson_text_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="maintenace service orders"
                        android:textSize="@dimen/txt_size_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Total MSO: "
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvCMCount"
                            android:text=""
                            android:gravity="center"
                            android:background="@drawable/bg_mso_count"
                            android:textColor="@color/colorWhite"
                            android:layout_width="36dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:src="@drawable/home_arrow"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPreventiveMaintenance"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            card_view:cardCornerRadius="@dimen/card_corner_radius">>
            <LinearLayout
                android:layout_marginTop="@dimen/margin_xlarge"
                android:layout_marginBottom="@dimen/margin_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/home_pm"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.6"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:orientation="vertical">
                    <TextView
                        android:text="Preventive Maintenance"
                        android:textSize="@dimen/txt_size_x_large"
                        android:textStyle="bold"
                        android:textColor="@color/colorLightBlack"
                        android:fontFamily="@font/crimson_text_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="maintenance service orders"
                        android:textSize="@dimen/txt_size_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Total MSO: "
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvPMCount"
                            android:layout_width="36dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_mso_count"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:src="@drawable/home_arrow"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMaintenaceList"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        tools:context=".fragment.MaintenanceListFragment"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_marginBottom="@dimen/margin_xlarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCorrective"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                card_view:cardElevation="10dp"
                card_view:cardCornerRadius="@dimen/card_corner_small_radius">
                <LinearLayout
                    android:layout_margin="@dimen/margin_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivCorrective"
                        android:src="@drawable/home_cm"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tvCorrective"
                        android:text="Corrective Maintenance"
                        android:fontFamily="@font/crimson_text_regular"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPreventive"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                card_view:cardElevation="10dp"
                card_view:cardCornerRadius="@dimen/card_corner_small_radius">
                <LinearLayout
                    android:layout_margin="@dimen/margin_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivPreventive"
                        android:src="@drawable/home_pm"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tvPreventive"
                        android:text="Preventive Maintenance"
                        android:fontFamily="@font/crimson_text_regular"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/bg_maintenace_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioGroup
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:id="@+id/rgPM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rbPMAll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_left"
                    android:textColor="@color/colorWhite"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:gravity="center"
                    android:text="All"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingBottom="@dimen/padding_4"
                    android:textSize="@dimen/txt_size_large"/>


                <RadioButton
                    android:id="@+id/rbPMWCSH"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_middle"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="WCSH"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingBottom="@dimen/padding_4"
                    android:textSize="@dimen/txt_size_large" />

                <RadioButton
                    android:id="@+id/rbPMINPRG"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_right"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="INPRG"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingBottom="@dimen/padding_4"
                    android:textSize="@dimen/txt_size_large" />
            </RadioGroup>

            <RadioGroup
                android:visibility="visible"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:id="@+id/rgCM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rbCMAll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_left"
                    android:textColor="@color/colorWhite"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:gravity="center"
                    android:text="All"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingBottom="@dimen/padding_4"
                    android:textSize="@dimen/txt_size_large"/>


                <RadioButton
                    android:id="@+id/rbCMAPPR"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_middle"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="APPR"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingBottom="@dimen/padding_4"
                    android:textSize="@dimen/txt_size_large" />

                <RadioButton
                    android:id="@+id/rbCMACK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_middle"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="ACK"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingBottom="@dimen/padding_4"
                    android:textSize="@dimen/txt_size_large" />

                <RadioButton
                    android:id="@+id/rbCMInprg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_right"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="INPRG"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingBottom="@dimen/padding_4"
                    android:textSize="@dimen/txt_size_large" />
            </RadioGroup>

            <RadioGroup
                android:visibility="visible"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_left"
                    android:textColor="@color/colorWhite"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:gravity="center"
                    android:text="All"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingBottom="@dimen/padding_4"
                    android:textSize="@dimen/txt_size_large"/>


                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_middle"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="Weekly"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingBottom="@dimen/padding_4"
                    android:textSize="@dimen/txt_size_large" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_middle"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="Monthly"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingBottom="@dimen/padding_4"
                    android:textSize="@dimen/txt_size_large" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_middle"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="Quarterly"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingBottom="@dimen/padding_4"
                    android:textSize="@dimen/txt_size_large" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_right"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="Yearly"
                    android:paddingTop="@dimen/padding_4"
                    android:paddingBottom="@dimen/padding_4"
                    android:textSize="@dimen/txt_size_large" />
            </RadioGroup>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@drawable/bg_status_spinner"
                android:padding="@dimen/padding_8"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/margin_xsmall"
                    android:text="Filtered By MSO Status"
                    android:textColor="@color/colorWhite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_spinner">
                    <Spinner
                        style="@style/Widget.AppCompat.DropDownItem.Spinner"
                        android:id="@+id/spinnerStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/transparentView"
                    android:clickable="true"
                    android:background="@color/transparent"
                    android:foreground="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerviewMaintenaceList"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/progress_bar"
        android:clickable="true"
        android:background="@color/color_black_trans"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:SpinKit_Color="@color/colorWhite" />

    </RelativeLayout>



</RelativeLayout>