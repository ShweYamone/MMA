<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".fragment.First_Step_PM_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_vertical_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.3"
                    android:textColor="@color/colorBlack"
                    android:text="@string/basic_information"
                    android:fontFamily="@font/crimson_text_bold"
                    android:textSize="@dimen/txt_size_large"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:text="@string/mso_status"
                    android:fontFamily="@font/crimson_text_regular"
                    android:textSize="@dimen/txt_size_normal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:fontFamily="@font/crimson_text_bold"
                    android:textSize="@dimen/txt_size_small"
                    android:textColor="@color/colorPrimary"
                    android:text="INPRG"
                    android:background="@drawable/round_rect_shape_progress"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:weightSum="4"
                android:orientation="horizontal"
                android:background="@drawable/round_rect_shape">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/panel_id"
                    android:fontFamily="@font/crimson_text_regular"
                    android:textSize="@dimen/txt_size_normal"/>

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    tools:ignore="Suspicious0dp" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_list"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/margin_normal"
                android:fontFamily="@font/crimson_text_bold"
                android:textSize="@dimen/txt_size_large"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visual_inspection"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/crimson_text_regular"
                android:textSize="@dimen/txt_size_normal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="vertical"
                android:background="@drawable/round_rect_shape_line">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:text="@string/desc_visual_inspection"
                    android:fontFamily="@font/crimson_text_regular"
                    android:textSize="@dimen/txt_size_normal"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_remark_blank_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:layout_toLeftOf="@+id/iv_check_blank_1"
                        android:src="@drawable/remark_blank"/>

                    <ImageView
                        android:id="@+id/iv_check_blank_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check_blank"
                        android:layout_margin="@dimen/margin_small"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:text="@string/remark"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/crimson_text_bold"
                        android:textSize="@dimen/txt_size_normal"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/txt_size_normal"
                        android:hint="@string/text_here"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:orientation="vertical"
                android:background="@drawable/round_rect_shape_line">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:text="@string/desc_visual_inspection"
                    android:fontFamily="@font/crimson_text_regular"
                    android:textSize="@dimen/txt_size_normal"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_remark_blank_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:layout_toLeftOf="@+id/iv_check_blank_2"
                        android:src="@drawable/remark_blank"/>

                    <ImageView
                        android:id="@+id/iv_check_blank_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check_blank"
                        android:layout_margin="@dimen/margin_small"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:text="@string/remark"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/crimson_text_bold"
                        android:textSize="@dimen/txt_size_normal"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/txt_size_normal"
                        android:hint="@string/text_here"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:orientation="vertical"
                android:background="@drawable/round_rect_shape_line">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:text="@string/desc_visual_inspection"
                    android:fontFamily="@font/crimson_text_regular"
                    android:textSize="@dimen/txt_size_normal"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_remark_blank_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:layout_toLeftOf="@+id/iv_check_blank_3"
                        android:src="@drawable/remark_blank"/>

                    <ImageView
                        android:id="@+id/iv_check_blank_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check_blank"
                        android:layout_margin="@dimen/margin_small"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:text="@string/remark"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/crimson_text_bold"
                        android:textSize="@dimen/txt_size_normal"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/txt_size_normal"
                        android:hint="@string/text_here"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fault_found"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/margin_normal"
                android:fontFamily="@font/crimson_text_bold"
                android:textSize="@dimen/txt_size_large"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal"
                android:background="@drawable/round_rect_shape_line">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.65"
                    android:layout_margin="@dimen/margin_small"
                    android:text="@string/fault_found_remarks"
                    android:fontFamily="@font/crimson_text_regular"
                    android:textSize="@dimen/txt_size_normal"/>
                <ImageView
                    android:id="@+id/iv_fault_found_remarks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:src="@drawable/check_blank"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_alignParentRight="true"/>


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attach_pre_maintenance_photo"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/margin_normal"
                android:fontFamily="@font/crimson_text_bold"
                android:textSize="@dimen/txt_size_large"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:weightSum="4">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/add_photo"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attach_post_maintenance_photo"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/margin_normal"
                android:fontFamily="@font/crimson_text_bold"
                android:textSize="@dimen/txt_size_large"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:weightSum="4">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/add_photo"/>
            </LinearLayout>

            <!-- Button Design -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:weightSum="4">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/round_rect_shape_button"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight="2"
                    android:text="@string/save"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/round_rect_shape_button"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight="2"
                    android:text="@string/job_done"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>