<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.First_Step_CM_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_vertical_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.3"
                    android:textColor="@color/colorBlack"
                    android:text="@string/mso_information"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_size_large"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:layout_marginRight="@dimen/margin_small"
                    android:text="@string/mso_status"
                    android:textSize="@dimen/txt_size_normal"/>

                <TextView
                    android:id="@+id/tv_mso_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:background="@drawable/round_rect_shape_progress"
                    android:gravity="center"
                    android:padding="@dimen/padding_8"
                    android:textColor="@color/colorOrange"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- the whole card design -->
            <LinearLayout
                android:layout_marginTop="@dimen/margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_normal"
                android:background="@drawable/round_rect_shape">

                <!-- 1st row design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.6"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/mso_number"
                            android:textSize="@dimen/txt_size_small_middle"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/panel_id"
                            android:textSize="@dimen/txt_size_small_middle"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_mso_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.6"
                            android:textColor="@color/colorBlack"
                            android:text="PGS/18/100000307"
                            android:textSize="@dimen/txt_size_large"/>

                        <TextView
                            android:id="@+id/tv_panel_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:textColor="@color/colorBlack"
                            android:text="VMS1 002"
                            android:textSize="@dimen/txt_size_large"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 2nd row design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.6"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/fault_type"
                            android:textSize="@dimen/txt_size_small_middle"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/mso_priority"
                            android:textSize="@dimen/txt_size_small_middle"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_fault_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.6"
                            android:textColor="@color/colorBlack"
                            android:text="Disconnect"
                            android:textSize="@dimen/txt_size_large"/>

                        <TextView
                            android:id="@+id/tv_mso_priority"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:textColor="@color/colorBlack"
                            android:text="Critical"
                            android:textSize="@dimen/txt_size_large"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 3rd row design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/allowable_resolution_date_time"
                            android:textSize="@dimen/txt_size_small_middle"/>
                        <TextView
                            android:id="@+id/tv_allowable_resolution_datetime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:text="24.06.2019 / 11.00.18"
                            android:textSize="@dimen/txt_size_large"/>
                </LinearLayout>

                <!-- 4th row design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/allowable_respond_date_time"
                        android:textSize="@dimen/txt_size_small_middle"/>
                    <TextView
                        android:id="@+id/tv_allowable_respond_datetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="23.06.2019 / 11.00.18"
                        android:textSize="@dimen/txt_size_large"/>
                </LinearLayout>

                <!-- 5th row design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/fault_detected_date_time"
                        android:textSize="@dimen/txt_size_small_middle"/>
                    <TextView
                        android:id="@+id/tv_fault_detected_datetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="23.06.2019 / 11.00.18"
                        android:textSize="@dimen/txt_size_large"/>
                </LinearLayout>

                <!-- 6th row design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/mso_notified_date_time"
                        android:textSize="@dimen/txt_size_small_middle"/>
                    <TextView
                        android:id="@+id/mso_notified_datetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="23.06.2019 / 11.00.18"
                        android:textSize="@dimen/txt_size_large"/>
                </LinearLayout>

                <!-- 7th row design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/bust_stop_number"
                        android:textSize="@dimen/txt_size_small_middle"/>
                    <TextView
                        android:id="@+id/tv_bus_stop_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="VMS1 036"
                        android:textSize="@dimen/txt_size_large"/>
                </LinearLayout>

                <!-- 8th row design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/location"
                        android:textSize="@dimen/txt_size_small_middle"/>
                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="Rochor Rd For Marina Centr"
                        android:textSize="@dimen/txt_size_large"/>
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attach_pre_maintenance_photo"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/margin_normal"
                android:textSize="@dimen/txt_size_large"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/iv_attach_pre_maintenance_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/add_photo"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_pre_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="3dp"
                    android:scrollbars="none"/>
            </LinearLayout>


            <Button
                android:id="@+id/btn_cm_step1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:background="@drawable/round_rect_shape_button"
                android:layout_margin="@dimen/margin_large"
                android:text="@string/save"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/progress_bar"
        android:clickable="true"
        android:background="@color/color_black_trans"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spinKitView"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/SpinKitView.Large.Circle"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:SpinKit_Color="@color/colorWhite" />

        <TextView
            android:layout_marginTop="@dimen/margin_xxlarge"
            android:layout_below="@id/spinKitView"
            android:id="@+id/firstText"
            android:text="Saving update data."
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/txt_size_large"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/firstText"
            android:text="Please wait..."
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/txt_size_large"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</FrameLayout>