<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".fragment.First_Step_PM_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_vertical_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.3"
                    android:textColor="@color/colorBlack"
                    android:text="@string/basic_information"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_size_large"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/margin_small"
                    android:textColor="@color/colorBlack"
                    android:text="@string/mso_status"
                    android:textSize="@dimen/txt_size_normal"/>

                <TextView
                    android:id="@+id/tvMSOStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textStyle="bold"
                    android:textColor="@color/colorOrange"
                    android:padding="@dimen/padding_8"
                    android:background="@drawable/round_rect_shape_progress"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_general_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:weightSum="4"
                android:orientation="horizontal"
                android:background="@drawable/round_rect_shape">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_normal"
                    android:weightSum="5"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/panel_id"
                        android:textSize="@dimen/txt_size_normal"/>

                    <TextView
                        android:id="@+id/tv_panel_id1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:textColor="@color/colorBlack"
                        android:text="4609"
                        android:textSize="@dimen/txt_size_normal"/>
                    <ImageView
                        android:id="@+id/iv_arrow_drop_down"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24"/>
                </LinearLayout>

            </LinearLayout>

            <!-- the whole card design -->
            <LinearLayout
                android:id="@+id/ll_whole_card_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="@dimen/margin_normal"
                android:background="@drawable/round_rect_shape">

                <!-- 1st row design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/panel_id"
                            android:textSize="@dimen/txt_size_normal"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/performed_by"
                            android:textSize="@dimen/txt_size_normal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_panel_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:textColor="@color/colorBlack"
                            android:text="PGS/18/100000307"
                            android:textSize="@dimen/txt_size_normal"/>

                        <TextView
                            android:id="@+id/tv_performed_by"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:textColor="@color/colorBlack"
                            android:text="VMS1 002"
                            android:textSize="@dimen/txt_size_normal"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 2nd row design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/location"
                            android:textSize="@dimen/txt_size_normal"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/bust_stop_number"
                            android:textSize="@dimen/txt_size_normal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/txt_size_normal"/>

                        <TextView
                            android:id="@+id/tv_bust_stop_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/txt_size_normal"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 3rd row design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/schedule_start_date_time"
                        android:textSize="@dimen/txt_size_normal"/>
                    <TextView
                        android:id="@+id/tv_schedule_start_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="24.06.2019 / 11.00.18"
                        android:textSize="@dimen/txt_size_normal"/>
                </LinearLayout>

                <!-- 4th row design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/schedule_end_date_time"
                        android:textSize="@dimen/txt_size_normal"/>
                    <TextView
                        android:id="@+id/tv_schedule_end_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="23.06.2019 / 11.00.18"
                        android:textSize="@dimen/txt_size_normal"/>
                </LinearLayout>

                <!-- 5th row design -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/actual_start_date_time"
                        android:textSize="@dimen/txt_size_normal"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_actual_start_date_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5"
                            android:textColor="@color/colorBlack"
                            android:text="23.06.2019 / 11.00.18"
                            android:textSize="@dimen/txt_size_normal"/>
                        <ImageView
                            android:id="@+id/iv_arrow_drop_up"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:src="@drawable/ic_baseline_arrow_drop_up_24"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_list"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/margin_normal"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size_large"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visual_inspection"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_size_normal"/>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/rv_check_list"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fault_found"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_normal"
                android:textSize="@dimen/txt_size_large"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/round_rect_shape_line">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.65"
                        android:layout_margin="@dimen/margin_small"
                        android:text="@string/fault_found_remarks"
                        android:fontFamily="@font/crimson_text_regular"
                        android:textSize="@dimen/txt_size_normal"/>
                    <ImageView
                        android:id="@+id/iv_fault_found_remarks"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:src="@drawable/check_blank"
                        android:layout_margin="@dimen/margin_small"
                        android:layout_alignParentRight="true"/>
                </LinearLayout>
               <EditText
                   android:id="@+id/et_fault_found_remarks"
                   android:text=""
                   android:layout_marginLeft="@dimen/margin_small"
                   android:layout_marginRight="@dimen/margin_small"
                   android:hint="Text here"
                   android:visibility="gone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photo_attachment"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/margin_normal"
                android:textSize="@dimen/txt_size_large"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/iv_attach_post_maintenance_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/add_photo"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_post_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="3dp"
                    android:scrollbars="none"/>
            </LinearLayout>

            <!-- Button Design -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:weightSum="4">

                <Button
                    android:id="@+id/btn_pm_step1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/round_rect_shape_button"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight="4"
                    android:text="@string/save"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>